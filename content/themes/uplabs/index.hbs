<div class="row">
    <div class="col-md-8">
         {{#get "posts" limit="1" as |featured|}}
           {{#foreach featured}}
             <div class="feat-row">
             <div class="row">
             <div class="col-md-5">
               <img class="pull-left" src={{image}} />
               </div>
               <div class="col-md-7">
               <div class="feat-row-caption pull-right">
                 <h4>{{title}}</h4>
                 <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">&raquo;</a></p>               
                 </div>
               </div>
               </div>
             </div>
           {{/foreach}}
         {{/get}}    
